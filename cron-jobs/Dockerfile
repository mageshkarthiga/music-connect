FROM golang:1.23-alpine AS builder

WORKDIR /app

RUN apk add --no-cache git

COPY go.mod go.sum ./
RUN go mod download

COPY . .

RUN CGO_ENABLED=0 GOOS=linux go build -ldflags="-s -w" -o app
FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata

WORKDIR /root

COPY --from=builder /app/app .
COPY .env .  

EXPOSE 8080

ENTRYPOINT ["./app"]
